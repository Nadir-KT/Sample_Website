import streamlit as st
from openai import OpenAI

client = OpenAI(api_key="your-api-key-here")  # Replace with yours

st.title("Quick Symptom Checker ðŸš€")
symptoms = st.text_input("Describe your symptoms (e.g., 'fever, sore throat')")
if st.button("Check"):
    if symptoms:
        response = client.chat.completions.create(
            model="gpt-3.5-turbo",
            messages=[{"role": "user", "content": f"Based on: {symptoms}. Suggest 2-3 conditions with confidence (1-10). Urge doctor visit."}]
        )
        st.write(response.choices[0].message.content)
    else:
        st.warning("Enter symptoms to start!")